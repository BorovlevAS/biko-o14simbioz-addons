<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="biko_jira_integration_settings" model="ir.ui.view">
        <field name="name">biko.jira.integration.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="30"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="JIRA Integration"
                     string="JIRA Integration" data-key="biko_jira_integration">

                    <h2>Authentification</h2>
                    <div class="row mt16 o_settings_container" name="usability_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane" id="biko_jira_credentials">
                                <label for="jira_login" string="Login" class="col-3 col-lg-3 o_light_label"/>
                                <field name="jira_login" nolabel="1"/>
                                <label for="jira_password" string="Password" class="col-3 col-lg-3 o_light_label"/>
                                <field name="jira_password" password="True" nolabel="1"/>
                            </div>
                        </div>
                    </div>

                </div>

            </xpath>
        </field>
    </record>

    <record id="biko_jira_settings_config_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="biko_jira_integration.biko_jira_integration_settings"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'biko_jira_integration', 'bin_size': False}</field>
    </record>

</odoo>

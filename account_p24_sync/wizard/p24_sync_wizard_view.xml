<?xml version="1.0" ?>
<odoo>

    <record id="p24_account_bank_sync_view" model="ir.ui.view">
        <field name="name">Privat24 Sync</field>
        <field name="model">account.p24.sync</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="PrivatBank Online Sync">
                <field name="state" invisible="1"/>
                <div states="loginpasswd">
                    <h2>Provide your Privat24 Autoclient Id and Token</h2>
                    <group>
                        <group>
                            <field name="autoclient_id"/>
                            <field name="autoclient_token" password="True"/>
                            <field name="task"/>
                            <field name="bank_acc"/>
                        </group>
                        <group>
                        </group>
                    </group>
                </div>
                <div states="date_choose">
                    <h2>Provide date of synchronization</h2>
                    <group>
                        <group>
                            <field name="import_variant" widget="radio"/>
                            <field name="start_import_date" style="width:320px"
                                   attrs="{'invisible': [('import_variant','!=','date_interval')], 'required':[('import_variant','=','date_interval')]}"/>
                            <field name="end_import_date" style="width:320px"
                                   attrs="{'invisible':[('import_variant','!=','date_interval')], 'required':[('import_variant','=','date_interval')]}"/>
                        </group>
                        <footer>
                            <group states="date_choose">
                                <button
                                        name="do_import"
                                        string="Synchronize"
                                        type="object"
                                        class="btn-primary"/>
                                <button
                                        string="Cancel"
                                        class="btn-default"
                                        special="cancel"/>
                            </group>
                        </footer>
                    </group>
                </div>
                <div states="choose_acc">
                    <h2>Choose supplier's bank account</h2>
                    <group>
                        <field name="partner_id" invisible="1"/>
                        <field name="company_id" invisible="1"/>
                        <field name="recip_bank"/>
                    </group>
                    <footer>
                        <group states="choose_acc">
                            <button
                                    name="do_sync_next"
                                    string="Send payment"
                                    type="object"
                                    class="btn-primary"/>
                            <button
                                    string="Cancel"
                                    class="btn-default"
                                    special="cancel"/>
                        </group>
                    </footer>
                </div>
                <div states="success">
                    <h2>Success!</h2>
                </div>
                <div states="failure">
                    <h2>Failure!</h2>
                </div>
                <footer>
                    <group states="loginpasswd">
                        <button
                                name="do_sync"
                                string="Next"
                                type="object"
                                class="btn-primary"/>
                        <button
                                string="Cancel"
                                class="btn-default"
                                special="cancel"/>
                    </group>
                    <group states="success">
                        <button
                                string="Cancel"
                                class="btn-default"
                                special="cancel"/>
                    </group>
                    <group states="failure">
                        <button
                                string="Cancel"
                                class="btn-default"
                                special="cancel"/>
                    </group>
                </footer>
            </form>
        </field>
    </record>

    <record id="p24_action_account_bank_sync" model="ir.actions.act_window">
        <field name="name">Privat24 Sync</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.p24.sync</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="p24_account_bank_sync_view"/>
    </record>

    <record id="p24_journal_dashboard_view_inherit" model="ir.ui.view">
        <field name="name">account.journal.dashboard.kanban.inherit.p24</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.account_journal_dashboard_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr='//a[@name="action_configure_bank_journal"]' position='before'>
                <br t-if="dashboard.number_to_reconcile == 0"/>
                <button t-if="dashboard.number_to_reconcile == 0"
                        type="object"
                        name="p24_sync_statement"
                        class="btn btn-primary btn-sm">P24 Sync</button>
                <a t-if="dashboard.number_to_reconcile > 0"
                   type="object"
                   name="p24_sync_statement"
                   class="oe_inline">P24 Sync</a>
            </xpath>
            <xpath expr='//div[@name="bank_journal_cta"]' position='inside'>
                <button t-if="dashboard.bank_statements_source == 'p24_import' &amp;&amp; dashboard.number_to_reconcile == 0"
                        type="object"
                        name="p24_sync_statement"
                        class="btn btn-primary btn-sm">P24 Sync</button>
                <a t-if="dashboard.bank_statements_source == 'p24_import' &amp;&amp; dashboard.number_to_reconcile > 0"
                   type="object"
                   name="p24_sync_statement"
                   class="oe_inline">P24 Sync</a>
            </xpath>
            <xpath expr='//div[@name="bank_cash_commands"]' position="after">
                <t t-if="dashboard.bank_statements_source == 'p24_import' &amp;&amp; journal_type == 'bank'">
                    <a type="object" name="p24_sync_statement">P24 Sync</a>
                </t>
            </xpath>
        </field>
    </record>
</odoo>

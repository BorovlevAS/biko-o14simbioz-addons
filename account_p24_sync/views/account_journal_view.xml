<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_journal_form_inherited_p24" model="ir.ui.view">
            <field name="name">account.journal.form.inherited.p24</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='bank_id']" position="after">
                    <field name="autoclient_id"
                           attrs="{'invisible': [('bank_statements_source', '!=', 'p24_import')]}"/>
                    <field name="autoclient_token"
                           password="True"
                           widget="text"
                           attrs="{'invisible': [('bank_statements_source', '!=', 'p24_import')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_form_inherited_p24" model="ir.ui.view">
        <field name="name">account.payment.form.inherited.p24</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_post']" position="after">
                <field name="hide_p24" invisible="1"/>
                <button name="p24_payment_export"
                        class="oe_highlight"
                        string="Export to Privat24"
                        type="object"
                        attrs="{'invisible':['|',('hide_p24', '=', True),('is_exported', '=', True)]}"/>
            </xpath>
            <xpath expr="//field[@name='payment_method_id']" position="after">
                <field name="is_exported" readonly="1"/>
            </xpath>
        </field>
    </record>


    <record id="action_send_to_p24" model="ir.actions.server">
        <field name="name">Send to P24</field>
        <field name="model_id" ref="account.model_account_payment"/>
        <!--            <field name="binding_model_id" ref="account.model_account_payment"/>-->
        <field name="state">code</field>
        <field name="code">
            for record in records:
                if not record.hide_p24:
                    record.p24_payment_export()
        </field>
    </record>

</odoo>

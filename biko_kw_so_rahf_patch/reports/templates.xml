<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="kw_so_rahf_template_biko_inherit" inherit_id="kw_so_rahf.kw_so_rahf_template" primary="True">
        <xpath expr="//*/td[@name='th_priceunit']" position="replace">
            <td name="th_priceunit" class="text-center">
                <b>Ціна
                </b>
            </td>
        </xpath>
        <xpath expr="//*/td[@name='th_subtotal']" position="replace">
            <span groups="account.group_show_line_subtotals_tax_excluded">
                <b>Сума</b>
            </span>
            <span groups="account.group_show_line_subtotals_tax_included">
                <b>Сума</b>
            </span>
        </xpath>
        <xpath expr="//*/table[@id='o_sub_table']" position="replace">
            <tr>
                <td align="right">Разом:</td>
                <td align="right" width="17%">
                    <span t-esc="'{:10.2f}'.format(doc.amount_untaxed).replace('.',',')"/>
                </td>
            </tr>
        </xpath>
        <xpath expr="//*/div" position="replace">
            <br/>
            Всьго на суму:
            <span t-field="doc.kw_amount_ukr_text"/>
            <br/>
            <br/>
        </xpath>
    </template>
</odoo>

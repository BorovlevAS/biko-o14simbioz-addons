<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="biko_so_rahf_paperformat_a4" model="report.paperformat">
        <field name="name">Rahunok SO A4</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">7</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>

    <record id="biko_rahf_sale_order_report_stamp" model="ir.actions.report">
        <field name="name">Rakhunok with stamp</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">biko_kw_so_rahf_patch.biko_kw_so_rahf_container_inherit</field>
        <field name="report_file">biko_kw_so_rahf_patch.biko_kw_so_rahf_container_inherit</field>
        <field name="print_report_name">(object.biko_get_invoice_filename())</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="biko_kw_so_rahf_patch.biko_so_rahf_paperformat_a4"/>
    </record>

    <record id="kw_so_rahf_sale_order_report" model="ir.actions.report">
        <field name="name">Rahunok w/o stamp</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">kw_so_rahf.kw_so_rahf_container</field>
        <field name="report_file">kw_so_rahf.kw_so_rahf_container</field>
        <field name="print_report_name">(object.biko_get_invoice_filename())</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="kw_so_rahf.kw_so_rahf_paperformat_a4"/>
    </record>

</odoo>
